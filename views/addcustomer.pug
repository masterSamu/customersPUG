doctype html 
head 
    title Add customer 
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous")
body
    h1 New Customer
    form(action='/addcustomer', method='POST')
        div.div.form-row 
            div.div.form-group.col-sm-3
                input(type="text", name="firstname" placeholder="Firstname").input.form-control
            div.div.form-group.col-sm-3
                input(type="text", name="lastname" placeholder="Lastname").input.form-control
        div.div.form-row 
            div.div.form-group.col-sm-3
                input(type="text", name="email" placeholder="Email").input.form-control
            div.div.form-group.col-sm-3
                input(type="text", name="phone" placeholder="Phone").input.form-control
        div.div.form-group.col-sm-6
            input(type="submit", value="Add customer").btn.btn-success